extends layout
block content
    div(class="container-fluid")
        h1= title
    - let items = results;
    - let o;
        div(class="row")
            each form,item in results
                div(class = "col-sm-2 bg-success" onclick=`buy(${item})`) #{form.wolf_color}
                div(class = "col-sm-2 bg-success" onclick=`buy(${item})`) #{form.wolf_breed}
                div(class = "col-sm-2 bg-success" onclick=`buy(${item})`) #{form.wolf_price}
                hr
    script.
        function buy(itemNo)
        {
            alert(`You purchased Item ${itemNo+1}`)
        }